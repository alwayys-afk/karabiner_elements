{
  "description": "VSCode Shortcuts",
  "manipulators": [
    {
      "conditions": [
        {
          "bundle_identifiers": [
            "^com.microsoft.VSCode$",
            "^dev.kiro.desktop$",
            "^dev.zed.Zed$"
          ],
          "type": "frontmost_application_if"
        },
        {
          "name": "caps_lock pressed",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "slash",
        "modifiers": {
          "mandatory": ["option"]
        }
      },
      "to": [
        {
          "key_code": "f12",
          "modifiers": "fn"
        }
      ],
      "type": "basic"
    },
    {
