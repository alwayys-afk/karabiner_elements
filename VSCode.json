            "^dev.zed.Zed$"
          ],
          "type": "frontmost_application_if"
        },
        {
          "name": "caps_lock pressed",
          "type": "variable_if",
          "value": 1
        }
      ],
      "from": {
        "key_code": "slash",
        "modifiers": {
          "optional": ["any"]
        }
      },
      "to": [
        {
          "key_code": "k",
          "modifiers": ["command"]
